{
    "manifest_version": 3,
    "name": "Simple Weather",
    "version": "1.0.1",
    "description": "Simple Weather is a Chrome extension that shows real-time weather updates and a 5-day forecast with 3-hour intervals.",
    "icons": {
        "16": "favicon/favicon-16x16.png",
        "32": "favicon/favicon-32x32.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "favicon/favicon-16x16.png",
            "32": "favicon/favicon-32x32.png"
        }
    },
    "permissions": [
        "notifications",
        "geolocation"
    ],
    "host_permissions": [
        "https://api.openweathermap.org/*"
    ]
}